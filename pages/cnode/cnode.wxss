/* cnode.wxss */
page{
  font-family: "Helvetica Neue","Luxi Sans","DejaVu Sans",Tahoma,"Hiragino Sans GB",STHeiti,sans-serif;
}
.tab-head{
  background-color: #666;
  display: flex;
  justify-content: space-around;
  color: #fff;
  font-size:28rpx;
}
.tab-item{
  padding:18rpx;
  overflow: hidden;
}
.tab-item-active{
  background-color: #80bd01;
}

/*list*/
.list-item{
  font-size:30rpx;
  padding:20rpx;
  border-bottom:1rpx solid #eee;
  overflow: hidden;
}

/*用户头像*/
.user-photo{
  float:left;
  width:88rpx;
  height:88rpx;
  border-radius:5rpx;
  margin-right:20rpx;
  background-color:#f4f4f4;
}
.item-text{
  vertical-align:top;
  margin-left:100rpx;
}
.user-name{
  color:#80bd01;
  margin-right:10rpx;
}